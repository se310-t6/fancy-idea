{
  "devDependencies": {
    "eslint": "^8.23.1",
    "eslint-config-kyle": "^9.3.0",
    "jest": "^29.0.3",
    "typescript": "^4.8.3"
  },
  "scripts": {
    "lint": "eslint --ext .js,.ts --color --ignore-path .gitignore . --fix && prettier --write --ignore-path .gitignore ."
  },
  "eslintConfig": {
    "extends": "kyle",
    "rules": {
      "no-plusplus": "off"
    },
    "overrides": [
      {
        "files": [
          "**/cypress/**/*.*"
        ],
        "env": {
          "jest": true
        },
        "globals": {
          "cy": true
        }
      }
    ]
  },
  "prettier": {
    "trailingComma": "all"
  }
}
